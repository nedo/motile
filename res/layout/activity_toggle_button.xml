<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToggleButtonActivity" >

<TextView
        android:id="@+id/ToggleButtonActivity_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/ToggleButtonActivity_STitle" />


    <ToggleButton
        android:id="@+id/ToggleButtonActivity_ToggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ToggleButtonActivity_Title"
        android:layout_marginTop="14dp"
        android:text="@string/ToggleButtonActivity_SToggleButton1" />
</RelativeLayout>